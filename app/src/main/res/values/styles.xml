<resources>

    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activities themes -->
    <style name="ActivityDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Buttons themes -->
    <style name="CloseButton">
        <item name="android:textColor">@color/white_alpha_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_btn_close</item>
    </style>

    <!-- TextViews themes -->
    <style name="Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Header" parent="Text">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">2</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/font.large</item>
        <item name="autoSizeMaxTextSize">@dimen/font.xxlarge</item>
    </style>

    <style name="SmallText" parent="Text">
        <item name="android:textSize">@dimen/font.small</item>
    </style>

    <style name="InfoText" parent="Text">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/font.small</item>
        <item name="autoSizeMaxTextSize">@dimen/font.medium</item>
    </style>

    <style name="LargeText" parent="Text">
        <item name="android:textSize">@dimen/font.large</item>
    </style>

    <style name="xLargeText" parent="Text">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/font.large</item>
        <item name="autoSizeMaxTextSize">@dimen/font.xlarge</item>
    </style>

    <style name="BigText" parent="Text">
        <item name="android:textSize">@dimen/font.xxxlarge</item>
    </style>

    <style name="Link" parent="InfoText">
        <item name="android:textColor">@color/picton_blue</item>
    </style>

    <style name="Attention" parent="Text">
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/font.large</item>
        <item name="autoSizeMaxTextSize">@dimen/font.mega</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
